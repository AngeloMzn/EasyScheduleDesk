<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.controller.LocatarioController">
   <children>
      <VBox>
         <children>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Button fx:id="btn_voltar" mnemonicParsing="false" text=" &lt;&lt; Voltar">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Pane prefHeight="50.0" prefWidth="150.0" />
                        <Label text="QUADRAS ESPORTIVAS">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <HBox prefHeight="27.0" prefWidth="563.0" spacing="5.0">
                     <children>
                        <ChoiceBox fx:id="search_opt" prefWidth="150.0" />
                        <TextField fx:id="search_txt" />
                        <Button fx:id="btn_search" mnemonicParsing="false" onAction="#search" text="Buscar" />
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                        <CheckBox fx:id="toggle_disponivel" mnemonicParsing="false" text="Disponivel">
                           <HBox.margin>
                              <Insets bottom="5.0" left="30.0" top="5.0" />
                           </HBox.margin>
                        </CheckBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <TableView fx:id="table_quadras" prefWidth="800.0">
               <columns>
                  <TableColumn fx:id="quadra_cell_id" editable="false" prefWidth="91.0" text="#" />
                  <TableColumn fx:id="nome_cell_id" editable="false" prefWidth="110.0" text="Nome" />
                  <TableColumn fx:id="tipo_cell_id" editable="false" prefWidth="88.0" text="Tipo" />
                  <TableColumn fx:id="preco_cell_id" editable="false" prefWidth="100.0" text="Valor/hora" />
                  <TableColumn fx:id="dono_cell_id" editable="false" prefWidth="88.0" text="Dono" />
                  <TableColumn fx:id="disponivel_cell_id" editable="false" prefWidth="84.0" text="Disponivel" />
               </columns>
            </TableView>
            <VBox prefHeight="96.0" prefWidth="800.0">
               <Pane />
               <HBox>
                  <Pane prefWidth="100.0" />
                  <Pane prefWidth="600.0" />
                  <Button fx:id="btn_locar_quadra" mnemonicParsing="false" onAction="#locar" text="Locar">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </Button>
               </HBox>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
